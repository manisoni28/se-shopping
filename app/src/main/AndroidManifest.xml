<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="srgiovine.com.seshopping">

    <application
        android:name="com.srgiovine.seshopping.SEApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.srgiovine.seshopping.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.srgiovine.seshopping.browse.BrowseActivity"
            android:label="@string/browse"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.srgiovine.seshopping.details.DetailsActivity"
            android:label="@string/details"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.srgiovine.seshopping.search.SearchActivity"
            android:label="@string/search"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.srgiovine.seshopping.cart.CartActivity"
            android:label="@string/cart"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.srgiovine.seshopping.settings.SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait" />
    </application>

</manifest>