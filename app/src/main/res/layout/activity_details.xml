<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerInside"
            android:src="@drawable/hat_female" />

        <View
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/image"
            android:background="@drawable/details_image_gradient" />

        <TextView
            android:id="@+id/description_label"
            style="@style/Label.Details"
            android:layout_below="@id/image"
            android:text="Description" />

        <TextView
            android:id="@+id/description"
            style="@style/Info.Details"
            android:layout_below="@id/description_label"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/category_label"
            style="@style/Label.Details"
            android:layout_below="@id/description"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Category" />

        <LinearLayout
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_label"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/get_item_label"
            style="@style/Label.Details"
            android:layout_below="@id/categories"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Get this item!" />

        <TextView
            android:id="@+id/price"
            style="@style/Info.Details"
            android:layout_below="@id/get_item_label"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/tag_background"
            android:gravity="center"
            android:textSize="32sp" />

        <LinearLayout
            android:id="@+id/input_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/decrement_amount"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:background="@drawable/button_background"
                android:scaleType="centerInside"
                android:src="@drawable/ic_minus" />

            <TextView
                android:id="@+id/amount"
                style="@style/Input.Details"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/tag_background"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/increment_amount"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:background="@drawable/button_background"
                android:scaleType="centerInside"
                android:src="@drawable/ic_plus" />
        </LinearLayout>

        <Button
            android:id="@+id/add_to_cart"
            style="@style/Input.Details"
            android:layout_width="180dp"
            android:layout_below="@id/input_amount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/button_background"
            android:text="Add to Cart"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>