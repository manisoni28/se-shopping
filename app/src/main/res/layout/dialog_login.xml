<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0">

    <RelativeLayout
        android:id="@+id/form_container"
        style="@style/FormDialog.Container">

        <ProgressBar
            android:id="@+id/progress"
            style="@style/FormDialog.Progress" />

        <TextView
            android:id="@+id/title"
            style="@style/FormDialog.Title"
            android:text="Let's log you in!" />

        <EditText
            android:id="@+id/email"
            style="@style/FormDialog.Input"
            android:layout_below="@id/title"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password"
            style="@style/FormDialog.Input"
            android:layout_below="@id/email"
            android:hint="Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />

        <View
            android:id="@+id/action_separator"
            style="@style/FormDialog.Separator"
            android:layout_below="@id/password" />

        <TextView
            android:id="@+id/cancel"
            style="@style/FormDialog.Button.Left"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/confirm"
            style="@style/FormDialog.Button.Right"
            android:text="@string/login" />
    </RelativeLayout>

</FrameLayout>