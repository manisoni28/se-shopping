<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_label"
            style="@style/Label.Settings"
            android:text="Login" />

        <TextView
            android:id="@+id/email"
            style="@style/Info.Settings" />

        <TextView
            android:id="@+id/account_holder_label"
            style="@style/Label.Settings"
            android:text="Account Holder" />

        <TextView
            android:id="@+id/name"
            style="@style/Info.Settings" />

        <TextView
            android:id="@+id/address_label"
            style="@style/Label.Settings"
            android:text="Address" />

        <EditText
            android:id="@+id/street"
            style="@style/Input.Settings"
            android:hint="Street"
            android:inputType="textPostalAddress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/city"
                style="@style/Input.Settings.Horizontal"
                android:hint="City"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/state"
                style="@style/Input.Settings.Horizontal"
                android:hint="State" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/zip"
                style="@style/Input.Settings.Horizontal"
                android:hint="Zip"
                android:inputType="number" />

            <EditText
                android:id="@+id/country"
                style="@style/Input.Settings.Horizontal"
                android:hint="Country" />
        </LinearLayout>

        <TextView
            android:id="@+id/credit_card_label"
            style="@style/Label.Settings"
            android:text="Credit Card" />

        <EditText
            android:id="@+id/card_number"
            style="@style/Input.Settings"
            android:hint="Card Number"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/first_name"
                style="@style/Input.Settings.Horizontal"
                android:hint="First Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/last_name"
                style="@style/Input.Settings.Horizontal"
                android:hint="Last Name"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/expiration_date"
                style="@style/Input.Settings.Horizontal"
                android:hint="Expiration" />

            <EditText
                android:id="@+id/security_code"
                style="@style/Input.Settings.Horizontal"
                android:hint="CC"
                android:imeOptions="actionDone"
                android:inputType="number" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/action_separator"
                style="@style/FormDialog.Separator" />

            <TextView
                android:id="@+id/cancel"
                style="@style/FormDialog.Button.Left"
                android:text="@string/edit" />

            <TextView
                android:id="@+id/confirm"
                style="@style/FormDialog.Button.Right"
                android:text="@string/save" />

            <TextView
                android:id="@+id/logout"
                style="@style/FormDialog.Button"
                android:layout_below="@id/action_separator"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/logout" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>