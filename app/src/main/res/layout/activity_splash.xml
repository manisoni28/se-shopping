<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_background" />

    <RelativeLayout
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:text="Welcome to SE Shopping"
            android:textColor="@color/textColorPrimary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/action_separator"
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:background="@color/dividerColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/action_separator"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@id/action_separator"
            android:fontFamily="monospace"
            android:lineSpacingMultiplier="1.2"
            android:onClick="onLoginClicked"
            android:text="@string/login"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/action_separator"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@id/action_separator"
            android:fontFamily="monospace"
            android:lineSpacingMultiplier="1.2"
            android:onClick="onSignupClicked"
            android:text="@string/signup"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_separator"
            android:layout_centerHorizontal="true"
            android:fontFamily="monospace"
            android:onClick="onForgotPasswordClicked"
            android:text="Forgot password?"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />
    </RelativeLayout>

</FrameLayout>
