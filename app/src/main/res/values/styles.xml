<resources>

    <style name="AppTheme" parent="@android:style/Theme.Material">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@android:style/Theme.Material.NoActionBar" />

    <style name="AppTheme.Dialog" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Label -->

    <style name="Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Label.Settings" />

    <style name="Label.Details" />

    <!-- Info -->

    <style name="Info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Info.Settings" />

    <style name="Info.Details" />

    <!-- Input -->

    <style name="Input">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Input.Settings">
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Input.Settings.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Input.Details" />

    <!-- List -->

    <style name="List" />

    <style name="List.Empty">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">Empty</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.75</item>
    </style>

    <!-- FormDialog -->

    <style name="FormDialog" />

    <style name="FormDialog.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:alpha">0</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:scaleY">0</item>
    </style>

    <style name="FormDialog.Progress" parent="@android:style/Widget.Material.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="FormDialog.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormDialog.Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FormDialog.Separator">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="FormDialog.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FormDialog.Button.Left">
        <item name="android:layout_alignBottom">@id/action_separator</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_toLeftOf">@id/action_separator</item>
    </style>

    <style name="FormDialog.Button.Right">
        <item name="android:layout_alignBottom">@id/action_separator</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_toRightOf">@id/action_separator</item>
    </style>

</resources>
